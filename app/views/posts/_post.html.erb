<div id="post-<%= post.id %>" class="panel panel-default">
  <div class="panel-heading">
    <%= post.user.display_name %>
     <span id="post-collection-<%= post.id %>" class="pull-right">
        <%= render :partial => "collection", :locals => { :post => post} %>
     </span>
  </div>
  <div class="panel-body">
    <span id="post-thumbsup-<%= post.id %>" class="label label-success"><%= post.likes.count %> üëç </span>

    <span id="post-heart-<%= post.id %>" class="label label-danger"><%= post.collections.count %> ‚ù§ </span>
    <%= post.content %>

    <div class="text-right">
      <span id="post-like-<%= post.id %>">
        <%= render :partial => "like", :locals => { :post => post} %>
      </span>

       <% if current_user && post.user == current_user %>
         <p style="float:right">
           <%= link_to "Delete", post_path(post), :method => :delete, :remote => true, :class => "btn btn-danger" %>
         </p>
       <% end %>
    </div>
  </div>
</div>
